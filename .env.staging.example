# Staging Environment Configuration Template
# Copy this file to .env.staging and fill in the actual values

# Database Configuration
STAGING_DB_NAME=billing_staging
STAGING_DB_USER=staging_user
STAGING_DB_PASSWORD=your_staging_db_password_here

# Redis Configuration
STAGING_REDIS_PASSWORD=your_staging_redis_password_here

# Application Security
STAGING_SECRET_KEY=your_staging_secret_key_here_minimum_32_characters
STAGING_ENCRYPTION_KEY=your_staging_encryption_key_here_32_chars

# Xendit Payment Gateway
STAGING_XENDIT_CALLBACK_TOKEN_ARTACOMINDO=your_staging_xendit_callback_artacom
STAGING_XENDIT_CALLBACK_TOKEN_JELANTIK=your_staging_xendit_callback_jelantik
STAGING_XENDIT_API_KEY_JAKINET=your_staging_xendit_api_jakinet
STAGING_XENDIT_API_KEY_JELANTIK=your_staging_xendit_api_jelantik

# CORS Configuration
STAGING_CORS_ORIGINS=https://staging.billing.yourdomain.com,https://staging-admin.billing.yourdomain.com

# Monitoring
STAGING_GRAFANA_PASSWORD=your_staging_grafana_password_here

# Container Registry
REGISTRY=ghcr.io
IMAGE_NAME=artacom-ftth-billing

# Additional Settings
ENVIRONMENT=staging
LOG_LEVEL=INFO
DEBUG=false

# Mikrotik Settings (staging)
STAGING_MIKROTIK_HOST=staging-mikrotik.yourdomain.com
STAGING_MIKROTIK_USERNAME=api_staging
STAGING_MIKROTIK_PASSWORD=your_staging_mikrotik_password

# Email Configuration (staging)
STAGING_SMTP_HOST=smtp.gmail.com
STAGING_SMTP_PORT=587
STAGING_SMTP_USERNAME=staging@yourdomain.com
STAGING_SMTP_PASSWORD=your_staging_email_password
STAGING_EMAIL_FROM=staging@yourdomain.com

# External Services
STAGING_WEBHOOK_URL=https://hooks.staging.slack.com/services/YOUR/SLACK/WEBHOOK