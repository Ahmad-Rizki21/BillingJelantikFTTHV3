{
  "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
  "applicationId": "com.artacom.billingftth",
  "version": "1.0.0",
  "defaultMode": "window",
  "port": 0,
  "documentRoot": "/dist/",
  "url": "/", 
  "enableServer": true,
  "enableNativeAPI": true,
  "tokenSecurity": "one-time",
  "logging": {
    "enabled": true,
    "writeToLogFile": true 
  },
  "nativeAllowList": [
    "app.*",
    "os.*",
    "debug.log"
  ],
  "modes": {
    "window": {
      "title": "Artacom FTTH Billing",
      "width": 1280,
      "height": 800,
      "minWidth": 400,
      "minHeight": 200,
      "center": true,
      "icon": "/favicon.ico",
      "enableInspector": true,
      "exitProcessOnClose": true
    }
  },
  "cli": {
    "binaryName": "ArtacomBilling",
    "resourcesPath": "/dist/",
    "clientLibrary": "/neutralino.js",
    "frontendLib": {
      "command": "npm run dev",
      "devUrl": "http://localhost:3000"
    }
  }
}