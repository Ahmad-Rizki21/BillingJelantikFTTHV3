{
  "name": "frontend",
  "version": "0.0.0",
  "private": true,
  "description": "Artacom FTTH Billing System",
  "author": "Artacom (https://www.instagram.com/amad.dyk/)",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "dev:tsc": "run-p dev \"type-check {@}\" --",
    "build": "vite build",
    "build:prod": "npm run build && npm run build:analyze",
    "build:analyze": "npm run build && echo 'ðŸ“Š Bundle analysis complete! Open dist/bundle-analysis.html'",
    "build:preview": "npm run build && npm run preview",
    "build:fast": "vite build --minify=false",
    "build:report": "npm run build && npm run analyze:bundle",
    "build-only": "vite build",
    "preview": "vite preview --port 4173 --host",
    "type-check": "vue-tsc --build",
    "type-check:watch": "vue-tsc --build --watch",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "analyze:bundle": "echo 'ðŸ“Š Opening bundle analysis...' && xdg-open dist/bundle-analysis.html 2>/dev/null || open dist/bundle-analysis.html 2>/dev/null || echo 'Bundle analysis file: dist/bundle-analysis.html'",
    "analyze:size": "echo 'ðŸ’¾ Total bundle size:' && du -sh dist/ && echo 'ðŸ“ˆ Largest files:' && du -sh dist/assets/*/* | sort -rh | head -10",
    "performance": "echo 'ðŸš€ Build performance metrics:' && npm run build && npm run analyze:size",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:full": "rm -rf dist node_modules package-lock.json && npm install",
    "pre-commit": "npm run type-check && npm run lint:check && npm run format:check",
    "serve": "vite preview",
    "serve:https": "vite preview --https"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@mdi/font": "^7.4.47",
    "@mdi/js": "^7.4.47",
    "@tauri-apps/plugin-store": "^2.3.0",
    "@types/d3-force": "^3.0.10",
    "@types/leaflet": "^1.9.20",
    "@types/lodash": "^4.17.20",
    "@vue-leaflet/vue-leaflet": "^0.10.1",
    "@zxing/library": "^0.21.3",
    "axios": "^1.10.0",
    "chart.js": "^4.5.0",
    "d3-force": "^3.0.0",
    "echarts": "^5.6.0",
    "html2canvas": "^1.4.1",
    "leaflet": "^1.9.4",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lucide-static": "^0.553.0",
    "lucide-vue-next": "^0.553.0",
    "mapbox-gl": "^3.15.0",
    "pinia": "^3.0.3",
    "v-network-graph": "^0.9.21",
    "vue": "^3.5.17",
    "vue-chartjs": "^5.3.2",
    "vue-echarts": "^7.0.3",
    "vue-router": "^4.5.1",
    "vuetify": "^3.9.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@eslint/js": "^9.31.0",
    "@tauri-apps/cli": "^2.7.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "eslint-plugin-vue": "^10.3.0",
    "npm-run-all2": "^8.0.4",
    "rollup-plugin-visualizer": "^6.0.4",
    "terser": "^5.44.1",
    "typescript": "~5.8.0",
    "typescript-eslint": "^8.37.0",
    "vite": "^7.1.6",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vue-tsc": "^2.2.10"
  }
