[flake8]
max-line-length = 127
max-complexity = 10
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    build,
    dist,
    migrations,
    alembic,
    node_modules
ignore =
    E203,
    E501,
    W503,
    W504,
    E402
per-file-ignores =
    __init__.py:F401
    conftest.py:F401,F811
    test_*.py:F401,F811
max-doc-length = 120
docstring-convention = google