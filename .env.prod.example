# Production Environment Configuration Template
# Copy this file to .env.prod and fill in the actual values
# IMPORTANT: Never commit this file to version control!

# Database Configuration
PROD_DB_NAME=billing_prod
PROD_DB_USER=prod_user
PROD_DB_PASSWORD=your_prod_db_password_here_use_strong_password

# Database Replication
PROD_REPLICATION_USER=replicator
PROD_REPLICATION_PASSWORD=your_replication_password_here

# Redis Configuration
PROD_REDIS_PASSWORD=your_prod_redis_password_here_use_strong_password

# Application Security (CRITICAL)
PROD_SECRET_KEY=your_prod_secret_key_here_minimum_32_characters_use_random_string
PROD_ENCRYPTION_KEY=your_prod_encryption_key_here_32_chars_generated_by_cryptography

# Xendit Payment Gateway (Production)
PROD_XENDIT_CALLBACK_TOKEN_ARTACOMINDO=your_prod_xendit_callback_artacom
PROD_XENDIT_CALLBACK_TOKEN_JELANTIK=your_prod_xendit_callback_jelantik
PROD_XENDIT_API_KEY_JAKINET=your_prod_xendit_api_jakinet
PROD_XENDIT_API_KEY_JELANTIK=your_prod_xendit_api_jelantik

# CORS Configuration
PROD_CORS_ORIGINS=https://billing.yourdomain.com,https://admin.billing.yourdomain.com

# Monitoring and Observability
PROD_GRAFANA_PASSWORD=your_prod_grafana_password_here_use_strong_password
PROD_SENTRY_DSN=https://your_sentry_dsn_here

# Container Registry
REGISTRY=ghcr.io
IMAGE_NAME=artacom-ftth-billing

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=WARNING
DEBUG=false

# Mikrotik Settings (Production)
PROD_MIKROTIK_HOST=mikrotik.yourdomain.com
PROD_MIKROTIK_USERNAME=api_prod
PROD_MIKROTIK_PASSWORD=your_prod_mikrotik_password

# Email Configuration (Production)
PROD_SMTP_HOST=smtp.yourdomain.com
PROD_SMTP_PORT=587
PROD_SMTP_USERNAME=noreply@yourdomain.com
PROD_SMTP_PASSWORD=your_prod_email_password
PROD_EMAIL_FROM=noreply@yourdomain.com

# SSL Configuration
PROD_SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
PROD_SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key
BACKUP_S3_REGION=ap-southeast-1

# External Services
PROD_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
PROD_DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session Configuration
SESSION_SECRET_KEY=your_session_secret_key_here
SESSION_TIMEOUT=3600

# API Configuration
API_RATE_LIMIT=1000
API_TIMEOUT=30

# Security Headers
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CSP_DEFAULT_SRC=self

# Performance Settings
WORKER_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=10M